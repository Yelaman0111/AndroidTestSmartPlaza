<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите название продукта"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />

    <EditText
        android:id="@+id/search_et"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_20sdp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Введите название продукта"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#000"
        android:background="@drawable/editetxt_bottom_border"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp">

        <EditText
            android:id="@+id/lowCost"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/editetxt_bottom_border"
            android:hint="От"
            android:inputType="number"
            />


        <EditText
            android:id="@+id/highCost"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/editetxt_bottom_border"
            android:layout_marginLeft="@dimen/_30sdp"
            android:hint="До"
            android:inputType="number"

            />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_costAscend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сортировать по увелечению цены"/>

        <RadioButton
            android:id="@+id/radio_costDescend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сортировать по убыванию цены"/>


    </RadioGroup>
    <Button
        android:id="@+id/search_btn"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:text="Поиск"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>